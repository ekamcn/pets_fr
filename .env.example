# The variables added in this file are only available locally in MiniOxygen.
# Run `h2 link` to also inject environment variables from your storefront,
# or `h2 env pull` to populate this file.

# IMPORTANT: Replace these placeholder values with your actual credentials
# Never commit the actual .env file to version control!

SESSION_SECRET=your_session_secret_here

#script for google site verification to embed in the head and body
VITE_HEAD_SCRIPT="your_google_verification_id"
VITE_BODY_SCRIPT="https://query.min.js"
VITE_BODY_FUNCTION="function() { console.log('Hello from Body Script!'); }"

# Store Basics
VITE_STORE_NAME="Your Store Name"
VITE_CUSTOMER_SUPPORT_EMAIL="support@yourstore.com"
VITE_CUSTOMER_SERVICE_PHONE="1234567890"
VITE_DOMAIN_NAME="yourstore.com"
VITE_SHOPIFY_EMAIL="admin@yourstore.com"
VITE_SHOPIFY_ADMIN_ACCESS_TOKEN="shpat_your_admin_token_here"

# Theme Selection
VITE_CATEGORY="general"
VITE_LANGUAGE="en"

# Brand Customization
VITE_COLOR1="#C6A889"
VITE_COLOR2="#282827"
VITE_LOGO="/logo.png"
VITE_BANNER="/banner.webp"
VITE_TYPOGRAPHY="sans-serif"

# Legal Information
VITE_COMPANY_NAME="Your Company Name"
VITE_COMPANY_ADDRESS="123 Main St, City, Country"

# Checkout Configuration
VITE_CHECKOUT_DOMAIN="checkout.yourstore.com"
VITE_CHECKOUT_ID="your_checkout_id"
VITE_SQUARE_LOGO="/square-logo.png"
VITE_OFFER_ID_TYPE="default"

# Custom Offer IDs 
VITE_CUSTOM_OFFER_ID_9_99=""
VITE_CUSTOM_OFFER_ID_19_5=""
VITE_CUSTOM_OFFER_ID_29_9=""
VITE_CUSTOM_OFFER_ID_39_99=""
VITE_CUSTOM_OFFER_ID_49_9=""
VITE_CUSTOM_OFFER_ID_59_5=""
VITE_CUSTOM_OFFER_ID_69_99=""
VITE_CUSTOM_OFFER_ID_79_9=""
VITE_CUSTOM_OFFER_ID_89_5=""
VITE_CUSTOM_OFFER_ID_99_99=""
VITE_CUSTOM_OFFER_ID_109_9=""
VITE_CUSTOM_OFFER_ID_119_5=""

# Shopify API Configuration
# IMPORTANT: These are sensitive credentials - never commit actual values!
PUBLIC_STOREFRONT_ID=your_storefront_id_here
PUBLIC_STOREFRONT_API_TOKEN=your_public_storefront_token_here
PRIVATE_STOREFRONT_API_TOKEN=shpat_your_private_token_here
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=your_customer_account_client_id_here
PUBLIC_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/your_shop_id
PUBLIC_STORE_DOMAIN=your-store.myshopify.com
SHOP_ID=your_shop_id_here
